use v5.10;
use strict;

BEGIN {
    require "$ENV{LJHOME}/cgi-bin/ljlib.pl";
}

use DW::TaskQueue;

DW::TaskQueue->start_work(
    'DW::Task::ContentImporter',
    message_timeout_secs => 86400,
    exit_after_secs      => 86400,
);
